# InsurityAI Environment Configuration Template
# Copy this file to .env and customize values for your environment

# ===== API Configuration =====
# FastAPI server settings
API_HOST=localhost
API_PORT=8001
API_DEBUG=false

# ===== Model Configuration =====
# Model training parameters
RANDOM_STATE=42
TEST_SIZE=0.2
VALIDATION_SIZE=0.2

# Feature engineering
N_FEATURES=16
FEATURE_SELECTION_METHOD=shap

# ===== Risk Assessment =====
# EWMA smoothing parameter (0.0-1.0, higher = more recent weight)
EWMA_LAMBDA=0.6

# Rate change caps (regulatory compliance)
MONTHLY_CAP_PCT=0.10
QUARTERLY_CAP_PCT=0.25

# ===== Model Hyperparameters =====
# GLM settings
GLM_ALPHA=1.0
GLM_L1_RATIO=0.5
GLM_MAX_ITER=1000

# LightGBM settings
LGBM_NUM_LEAVES=31
LGBM_LEARNING_RATE=0.1
LGBM_N_ESTIMATORS=100
LGBM_RANDOM_STATE=42

# ===== Data Configuration =====
# Input data paths (relative to project root)
RAW_TRIPS_PATH=data/raw/trips.parquet
RAW_META_PATH=data/raw/trips_meta.parquet

# Output data paths
FEATURES_PATH=data/features.parquet
PRICING_RESULTS_PATH=data/pricing_results.json
REASON_CODES_PATH=data/reason_codes.jsonl

# Model artifacts
GLM_MODEL_PATH=models/glm.pkl
LGBM_MODEL_PATH=models/lgbm.pkl
LGBM_LOSS_COST_PATH=models/lgbm_loss_cost.txt

# ===== Logging =====
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ===== Development =====
# Enable development features
DEV_MODE=false
RELOAD_ON_CHANGE=false

# Dashboard customization
DASHBOARD_TITLE="InsurityAI - Telematics-Based Auto Insurance"
DASHBOARD_DESCRIPTION="Real-time risk assessment and premium calculation"

# ===== Security =====
# API security (set strong values in production)
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS settings for frontend integration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ===== Performance =====
# Model inference settings
BATCH_SIZE=1000
MAX_CONCURRENT_REQUESTS=100

# Caching
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300

# ===== Monitoring =====
# Performance tracking
ENABLE_METRICS=true
METRICS_ENDPOINT="/metrics"

# Health check settings
HEALTH_CHECK_INTERVAL=60